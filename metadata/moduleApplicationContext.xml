<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="groovyUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="mappings">
            <props>
	           <prop key="module/@MODULE_ID@/groovy.form">groovyForm</prop>
	    </props>
	</property>
    </bean>

    <!-- Controllers -->
	<bean id="groovyScriptValidator" class="org.openmrs.module.groovy.validators.GroovyScriptValidator"/>

    <bean id="groovyForm" class="org.openmrs.module.groovy.web.controller.GroovyFormController">
	    <property name="sessionForm" value="false"/>
        <property name="commandName" value="command"/>
        <property name="validator" ref="groovyScriptValidator"/>
        <property name="formView" value="/module/@MODULE_ID@/groovyForm"/>
	    <property name="successView" value="groovy.form"/>
    </bean>


    <!-- /Controllers -->

    <!-- Services -->

    <bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.groovy.service.GroovyModuleService</value>
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.groovy.service.impl.GroovyModuleServiceImpl">
							<property name="dao">
								<bean class="org.openmrs.module.groovy.db.hibernate.impl.GroovyModuleDAOImpl">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>
								</bean>
							</property>
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>
<!-- / Services -->
