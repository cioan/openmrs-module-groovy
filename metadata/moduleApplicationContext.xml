<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
	
    <bean id="groovyUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="mappings">
            <props>
	           <prop key="module/@MODULE_ID@/groovy.form">groovyForm</prop>
	    </props>
	</property>
    </bean>
	
    <!-- Controllers -->
	
    <bean id="groovyForm" class="@MODULE_PACKAGE@.web.controller.GroovyFormController">
	<property name="commandName"><value>groovyForm</value></property>
	<property name="formView"><value>/module/@MODULE_ID@/groovyForm</value></property>
	<property name="successView"><value>groovy.form</value></property>
    </bean>
	
    <!-- /Controllers -->
</beans>
